{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "esnext", // 可以不配置，`rollup.config.js`里配置了`compilerOptions`属性
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": ["esnext", "dom"],
    "types": [],
    "rootDir": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src"
  ]
}
